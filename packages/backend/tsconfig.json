{
  "compilerOptions": {
    "target": "ES2018",
    "module": "CommonJS",
    "lib": [
      "esnext",
      "dom"
    ],
    "strict": true,
    "outDir": "./dist",
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noEmit": false,
    "removeComments": true,
    "noUnusedLocals": true,
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
  },
  "exclude": [
    "node_modules",
    "**/tests/*",
    "**/scripts/**"
  ],
  "include": [
    "src/**/*.ts",
  ],
}